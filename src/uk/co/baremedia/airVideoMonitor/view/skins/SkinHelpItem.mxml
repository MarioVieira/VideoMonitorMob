<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("uk.co.baremedia.airVideoMonitor.view.components.CompHelpItem")]
	</fx:Metadata>
	
	<fx:Script>
		<![CDATA[
			import uk.co.baremedia.airVideoMonitor.assets.Assets;
		]]>
	</fx:Script>
	
	<s:Group
		width="100%"
		height="10%">
		
		<s:HGroup 
			width="100%"
			styleName="styleItemRenderList">
			
			<s:Image
				id="icon">
				<s:source>
					
					<s:MultiDPIBitmapSource 
						source160dpi="{ Assets.arrowEast }"/>
					
					<!--source320dpi="{ Assets.arrowEast_320 }"-->
					
				</s:source>
			</s:Image>
			
			<s:Label
				id="label"/>
			
		</s:HGroup>
		
	</s:Group>
	
</s:Skin>
