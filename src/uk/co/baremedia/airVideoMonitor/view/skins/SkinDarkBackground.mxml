<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("spark.components.SkinnableContainer")]
	</fx:Metadata>
	
	<fx:Script>
		<![CDATA[
			import uk.co.baremedia.airVideoMonitor.assets.Assets;
		]]>
	</fx:Script>
	<!-- states -->
	<s:states>
		<s:State name="disabled" />
		<s:State name="normal" />
	</s:states>
	
	<!-- SkinParts
	name=contentGroup, type=spark.components.Group, required=false
	-->
	
	<s:VGroup
		width="100%"
		height="100%"
		gap="0">
		
		<s:HGroup
			id="image"
			width="100%"
			gap="0">
			
			<s:Image
				source="{ Assets.updaterLeft }"/>
			
			<s:Image
				width="100%"
				source="{ Assets.updaterMiddle }" 
				fillMode="repeat" />
			
			<s:Image
				source="{ Assets.updaterRight }"/>
			
		</s:HGroup>
		
		<s:HGroup
			height="100%"
			width="100%"
			gap="0">
			
			<s:Image
				height="100%"
				source="{ Assets.updaterLeftMiddle }"
				fillMode="repeat" />
			
			<!--<s:Spacer
				width="100%"
				height="100%"/>-->
			
			<s:Image
				height="100%"
				width="100%"
				source="{ Assets.updaterMiddleMiddle }"
				fillMode="repeat" />
			
			<s:Image
				height="100%"
				source="{ Assets.updaterRightMiddle }"
				fillMode="repeat" />
			
		</s:HGroup>
		
		<s:HGroup
			width="100%"
			gap="0">
			
			<s:Image
				source="{ Assets.updaterLeftBottom }"/>
			
			<s:Image
				width="100%"
				source="{ Assets.updaterMiddleBottom }" 
				fillMode="repeat" />
			
			<s:Image
				source="{ Assets.updaterRightBottom }"/>
			
		</s:HGroup>
		
	</s:VGroup>
	
</s:Skin>
